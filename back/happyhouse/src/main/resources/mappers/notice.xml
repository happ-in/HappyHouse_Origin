<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.happyhouse.model.repository.NoticeRepository">
    <insert id="insert" parameterType="notice">
        insert into notice(userid, subject, content, regtime)
        values (#{userid}, #{subject}, #{content}, now())
    </insert>

    <select id="selectAll" resultType="notice">
        select * from notice
    </select>


    <select id="selectOne" parameterType="int" resultType="notice">
        select  *
        from    notice
        where   noticeno=#{noticeno}
    </select>
</mapper>

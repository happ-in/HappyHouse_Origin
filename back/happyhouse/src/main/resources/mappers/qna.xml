<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.happyhouse.model.repository.QnaRepository">
    <select id="selectAll" resultType="qna">
        select  *
        from    qna
    </select>

    <select id="selectOne" parameterType="int" resultType="qna">
        select  *
        from    qna
        where   id=#{id}
    </select>

    <insert id="insert" parameterType="qna">
        insert into qna(title, content, username, userid, reg_date, mod_date)
        values(#{title}, #{content}, #{username}, #{userid}, now(), now())
    </insert>

    <update id="update" parameterType="qna">
        update  qna
            set title=#{title}, content=#{content}, mod_date=now()
        where   id=#{id}
    </update>

    <delete id="delete" parameterType="int">
        delete  from qna
        where   id=#{id}
    </delete>
</mapper>